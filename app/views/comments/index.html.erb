<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Body</th>
      <th>Idea</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
    <div class="row">
       <tr>
        <td class="col-md-4"><%= comment.user_name %></td>
        <td class="col-md-4"><%= comment.body %></td>
        <td class="col-md-4"><%= comment.idea_id %></td>
        <td><%= link_to 'Show', comment, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    </div>
     
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path, class: "btn btn-success" %>
