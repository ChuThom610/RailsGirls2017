<div class="row">
  <div class="col-md-6" style="border: 1px inset; border-radius: 5px; margin-top: 30px; padding: 15px 0 15px 15px">
    <p>
      <strong>User name:</strong>
      <%= @comment.user_name %>
    </p>
    
    <p>
      <strong>Body:</strong>
      <%= @comment.body %>
    </p>
    
    <p>
      <strong>Idea:</strong>
      <%= @comment.idea_id %>
    </p>
  
    <%= link_to 'Edit', edit_comment_path(@comment), class: "btn btn-warning" %> 
    <%= link_to 'Back', comments_path, class: "btn btn-primary" %>
  </div>
</div>
